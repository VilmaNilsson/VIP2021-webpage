doctype html
html
  head
    title Scratch, the best game ever!
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width,initial-scale=1')
    //- All of the basic CSS variables
    link(rel='stylesheet' href='/static/css/variables.css')
    link(rel='stylesheet' href='/static/css/navigation.css')
    link(rel='stylesheet' href='/static/css/releaseDay.css')
  body.releaseBody
    include includes/navigation.pug
    .logoDiv
    //-FOR DESIGN "E-DAY"
    main(id="release-main")
      h3(id="release-cdTitle") countdown clock
      div(id="release-outerCountdown")
        div(id="release-innerCountdown")
          div(id="release-countDown")
            div(id="release-days")
              p(class="release-cdTitle") DAYS
              div(class="release-cdTimer" id="release-timerDays")
            div(id="release-hours")
              p(class="release-cdTitle") HOURS
              div(class="release-cdTimer" id="release-timerHours")
            div(id="release-minutes")
              p(class="release-cdTitle") MINUTES
              div(class="release-cdTimer" id="release-timerMinutes")
            div(id="release-seconds")
              p(class="release-cdTitle") SECONDS
              div(class="release-cdTimer"  id="release-timerSeconds")
    script(src="/static/js/navigation.js")
    script(src="/static/js/releaseDay.js")
    //- Common footer
    include includes/footer.pug
